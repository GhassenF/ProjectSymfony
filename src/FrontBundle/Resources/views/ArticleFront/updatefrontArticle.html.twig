{% extends "default/front.html.twig" %}
{% block container %}
    <div class="content">
        <div class="content-container">
            <h3 class="card-title mt-2">Modifier votre article</h3>
            {{ form_start(form) }}

            <div class="row">


                <div class="card-body">

                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label for="inputname" class="control-label col-form-label">Titre</label>
                                {{ form_widget(form.titre,{'attr':{'class':'form-control'}} ) }}
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label for="inputname" class="control-label col-form-label">Auteur</label>
                                {{ form_widget(form.auteur,{'attr':{'class':'form-control'}} ) }}
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6" type="Journal">
                            <div class="form-group">
                                <label for="inputname" class="control-label col-form-label">Journal</label>
                                {{ form_widget(form.journal,{'attr':{'class':'form-control'}} ) }}
                            </div>
                        </div>

                        <div class="col-sm-12 col-md-6" type="emplacement">
                            <div class="form-group">
                                <label for="inputname" class="control-label col-form-label">PDF</label>
                                {{ form_widget(form.emplacement,{'attr':{'class':'form-control'}} ) }}
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6" type="date">

                        </div>

                        {{form_widget(form)}}

                    </div>

                    <div class="buttons">
                        <div class="pull-right" align="right">
                            <input type="submit" value="Valider" class="btn btn-md btn-color btn-button" />
                            <input type="reset" value="Annuler" class="btn btn-md btn-color btn-button" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}