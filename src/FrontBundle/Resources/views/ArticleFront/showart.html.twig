{% extends "default/front.html.twig" %}
{% block container %}
    <div class="content container">
        <section class="section-dont-miss">
            <div class="section-title-wrap">
                <h3 class="section-title">Liste des articles</h3>
            </div>
            {% for article in articles %}



                <div class="entry__body post-list__body">
                    <div class="entry__header">

                        <ul class="entry__meta">
                            <li>
                                <a>{{ article.date|date('d-m-20y') }}</a>
                            </li>
                            <li class="entry__meta-author">
                                organis√© par <a href="#">{{ article.auteur }}</a>
                            </li>
                        </ul>

                    </div>
                    <div class="entry__excerpt">
                        <p>{{ article.journal }}</p>
                    </div>
                </div>
                {% if is_granted("ROLE_ETAB") %}
                <td ><a  href="{{ path('navSupprimerArticleFront',{'identifiant':article.identifiant}) }}">Supprimer</a></td>
                <td><a href="{{ path('navModifierArticleFront',{'identifiant':article.identifiant}) }}">Modifier</a></td>
                {% endif %}
                <td><a href="{{ path('navShowOneArt',{'Id':article.Statarticle.idart,'em':article.emplacement}) }}">Lire</a></td>


            </article>
            {% endfor %}


        </section>
    </div>
{% endblock %}