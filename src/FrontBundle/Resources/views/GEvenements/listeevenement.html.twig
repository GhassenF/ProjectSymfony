{% extends "default/front.html.twig" %}
{% block container %}
    <div class="content container">
        <section class="section-dont-miss">
            <div class="section-title-wrap">
                <h3 class="section-title">Liste des événements</h3>
            </div>
            {% for evenement in evenements %}

                <article class="entry post-list">
                    <div class="entry__img-holder post-list__img-holder">
                        <a href="single-post.html">
                            <div class="thumb-container">
                                <img style="width:300px;height:200px;" alt="" src="{{ asset(evenement.imagepath) }}">                    </div>
                        </a>
                    </div>

                    <div class="entry__body post-list__body">
                        <div class="entry__header">
                            <a href="categories.html" class="entry__meta-category">{{ evenement.category }}</a>
                            <h2 class="entry__title">
                                <a href="single-post.html">{{ evenement.title }}</a>
                            </h2>
                            <ul class="entry__meta">
                                <li>
                                    <a>{{ evenement.date|date('d-m-20y') }}</a>
                                </li>
                                <li class="entry__meta-author">
                                    organisé par <a href="#">{{ evenement.etablissement }}</a>
                                </li>
                            </ul>

                        </div>
                        <div class="entry__excerpt">
                            <p>{{ evenement.description }}</p>
                        </div>
                    </div>
                    <a href="{{ path('navShowOneEvent',{'id':evenement.id}) }}">Voir la suite</a>
                    {% if is_granted("ROLE_ETAB")  %}
                    <td><a href="{{ path('navModificationEvent',{'id':evenement.id}) }}">Modifier</a></td>
                    <td><a href="{{ path('navSuppressionEvent',{'id':evenement.id}) }}">Supprimer</a></td>
{% endif %}

                </article>
            {% endfor %}


        </section>
    </div>
{% endblock %}