{% extends "default/front.html.twig" %}
{% block container %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/rating.css') }}" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="{{ asset('js/rating.js') }}"></script>
<section class="featured-posts-masonry">
    <div class="container">
        <div class="container text-center">
        <h1 class="mb-30">Fil  d'Actualité  </h1>
        </div>
        <hr>
        <div class="row">
            {% for actualite in Actualite %}
            <div class="featured-posts-masonry__item featured-posts-masonry__item--sm">

            <article class="entry featured-posts-masonry__entry">
                <div class="thumb-bg-holder" style="background-image: url({{ asset('img/' ~ actualite.pictures) }});">
                    <a href="{{ path('consulteractualiteinfront',{'id':actualite.id } ) }}" class="thumb-url"></a>
                    <div class="bottom-gradient"></div>
                </div>

                <div class="thumb-text-holder">
                    <a href="#" class="entry__meta-category entry__meta-category--label">{{ actualite.categories }}</a>
                    <h2 class="entry__title--lg entry__title--white">
                        <a href="#">{{ actualite.titre }}</a>
                    </h2>
                </div>
            </article>
            </div>
            {% endfor %}

        </div>


    </div>
</section>

