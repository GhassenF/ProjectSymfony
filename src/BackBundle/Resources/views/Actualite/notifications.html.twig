<div class="d-flex align-items-center justify-content-between pd-y-10 pd-x-20 bd-b bd-gray-200">

    <label class="tx-12 tx-info tx-uppercase tx-semibold tx-spacing-2 mg-b-0">Notifications</label>
    <a href="" class="tx-11">Mark All as Read</a>
</div><!-- d-flex -->

<div id="notifier" class="media-list">
    <!-- loop starts here -->
    {% for notif in notification %}
    <a class="media-list-link read">
        <div class="media pd-x-20 pd-y-15">
            <img src="http://via.placeholder.com/280x280" class="wd-40 rounded-circle" alt="">
            <div class="media-body">
                <p class="tx-13 mg-b-0 tx-gray-700"><strong class="tx-medium tx-gray-800">{{ notif.title }}</strong> {{ notif.description }}</p>
                <a class="tx-13 mg-b-0 tx-gray-700" href="{{ path(notif.route , notif.parameters) }}">To See</a>
                <span class="tx-12 tx-info tx-uppercase tx-semibold tx-spacing-2 mg-b-0">{{ notif.date|date('Y-m-d H:i:s') }}</span>
            </div>
        </div><!-- media -->
    </a>
        {% else %}
    <div class="media-body">Aucune notification</div>
    {% endfor %}
    <div class="pd-y-10 tx-center bd-t">
        <a href="" class="tx-12"><i class="fa fa-angle-down mg-r-5"></i> Show All Notifications</a>
    </div>
</div><!-- media-list -->